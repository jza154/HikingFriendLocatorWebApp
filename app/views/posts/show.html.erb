<% provide(:title, "Show Trail") %>

<section class="page">
<div class="container">
<div class="row">
<h1 class="wow fadeInDown post-title"> <%= @post.title %></h1> 

<%=image_tag@post.image.url(:medium) %>
<br>

<div class="field" id="post-meta">
  Posted on <%= @post.created_at.strftime("%m/%d/%Y at %I:%M%p")  %>
</div>

<div class="col-md-6">

<div class="row">
  <div class="field">
 
  <strong>Location: </strong><%= @post.location %> <br><br>
  <strong>Difficulty: </strong><%= @post.difficulty %><br><br>
  <strong>Distance: </strong> <%= @post.distance%><br><br>
  <strong>Season:</strong> <%= @post.season %><br><br>


  </div>
</div>

<div class="row">
<div class="field">
  <strong>Author</strong>
  <div class="field" id="post-det">
    <% @owner = User.find(@post.user_id) %>
    <%= image_tag @owner.image.url(:thumb) %>
    <%= @owner.first_name %> <%= @owner.last_name %>
  </div>
</div>
</div>


<div class="row">
<div class="field" id="post-btn-margin-top">
  <% if current_user.id == @post.user_id %>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <% end %>
  <%= link_to 'Back', posts_path %>
</div>
</div>


</div>

</div>
</div>
</section>